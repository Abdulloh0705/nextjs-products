generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

model Product {
  id          Int      @id @default(autoincrement())
  title       String
  price       Int
  brand       String   @default("Unknown")
  description String   @default("")
  rating      Float    @default(4.5)
  createdAt   DateTime @default(now())
}
model User {
  id        Int      @id @default(autoincrement())
  email     String   @unique
  password  String
  name      String?
  createdAt DateTime @default(now())
}